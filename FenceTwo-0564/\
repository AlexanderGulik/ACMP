  var a, b, c float32
  fmt.Scan(&a)
  fmt.Scan(&b)
  fmt.Scan(&c)
  p := (a+b+c)/2
  s := math.sqrt(p*(p-a)*(p-b)*(p-c))
  fmt.Println(s)
}
